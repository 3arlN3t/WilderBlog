<body>

  @RenderSection("TopAd", false)

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-inverse" style="background-color: rgba(0,0,0,0.8)">
    <a class="navbar-brand" asp-controller="Root" asp-action="Index">Shawn Wildermuth's Blog</a>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#theMenu">
      &#9776;
    </button>
    <div class="collapse navbar-collapse" id="theMenu">
      <ul class="navbar-nav nav-pills ml-auto">
        <partial name="_Menu" />
      </ul>
    </div>
  </nav>
  <!-- Page Header -->
  <!-- Set your background image for this header on the line below. -->
  @if (ViewBag.PageImage != null && !string.IsNullOrWhiteSpace(ViewBag.PageImage))
  {
    <header class="intro-header" style="background-image: url('@ViewBag.PageImage')">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-xl-12">
            <div class="site-heading">
              <h2>@ViewBag.PageName</h2>
              @if (ViewBag.PageBlurb != null)
              {
                <hr class="small">
                <span class="subheading">@ViewBag.PageBlurb</span>
              }
              @if (ViewBag.PageAttribution != null)
              {
                <span class="meta">@ViewBag.PageAttribution</span>
              }
            </div>
          </div>
        </div>
      </div>
    </header>
  }
  else
  {
    <div class="row">&nbsp;</div>
  }
  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
        @RenderBody()
      </div>
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <partial name="_Sidebar" />
                 @RenderSection("Sidebar", false)
      </div>
    </div>
  </div>
  <hr>
  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-12 col-xs-12 text-center">
          <ul class="list-inline">
            <li class="list-inline-item">
              <a href="http://feeds.feedburner.com/ShawnWildermuth" title="RSS Feed">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fas fa-rss fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://twitter.com/shawnwildermuth" title="Twitter">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://instagram.com/shawnwildermuth" title="Instagram">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-instagram fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://www.linkedin.com/in/shawnwildermuth/" title="LinkedIn">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://youtube.com/c/swildermuth" title="YouTube">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-youtube fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://github.com/shawnwildermuth" title="GitHub">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="http://stackoverflow.com/users/40125/shawn-wildermuth" title="Stack Overflow">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-stack-overflow fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="http://shawnw.me/pscourses" title="Pluralsight Courses">
                <span class="fas fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <img src="/img/pslogo-new-inverse.png" alt="Pluralsight" class="pluralsight-logo" />
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="http://www.amazon.com/-/e/B001H6ME46" title="Amazon Author Page">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-amazon fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="http://steamcommunity.com/id/shawnwildermuth/" title="Steam">
                <span class="fa-stack fa-lg fa-hover-spin">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-steam fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
          <p class="copyright text-muted">Copyright &copy; Wilder Minds LLC 2007-@DateTime.UtcNow.Year</p>
          <p class="copyright text-primary">Built with <a href="http://get.asp.net" target="_blank">ASP.NET Core 2.2</a>, MVC 6, <a href="http://vuejs.org" target="_blank">Vue</a>, <a href="https://github.com/aspnet/EntityFramework/wiki/Roadmap" target="_blank">Entity Framework Core 2.2</a>, <a href="http://typescript.org" target="_blank">TypeScript</a>, <a href="http://getbootstrap.com/" target="_blank">Bootstrap 4</a>, and Hosted on <a href="http://azure.com" target="_blank">Azure</a>. <a href="http://shawnw.me/learnaspnetcore" target="_blank">See my ASP.NET Core course to see how you can do it too!</a></p>
        </div>
      </div>
    </div>
  </footer>

  <partial name="_Info" />

  <environment names="Development">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/tether/js/tether.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
  </environment>
  <environment names="Production,Staging">
    <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
            asp-fallback-src="~/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    <script src="~/lib/tether/js/tether.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
  </environment>
  <script src="~/lib/cookieconsent/cookieconsent.min.js"></script>
  @RenderSection("Scripts", required: false)

  <environment names="Development">
    <script src="~/js/clean-blog.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/about.js"></script>
    <script src="~/js/audio.js"></script>
    <script src="~/js/video.js"></script>
  </environment>
  <environment names="Production,Staging">
    <script src="~/lib/site/wilderblog.min.js" asp-append-version="true"></script>

    <!-- Google -->
