<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta name="WebsiteSpark" content="GWDim6Y1dk" />
  <meta content=".NET, C#, Wildermuth, Shawn, Weblog, XAML, Silverlight, WP7, Microsoft, Training, Consulting, Database, JavaScript, CSS, Web Development, HTML"
        name="KEYWORDS" />
  <meta id="DescriptionMetaTag" content="@ViewBag.Title"
        name="DESCRIPTION" />

  <!-- for Facebook -->
  <meta property="og:title" content="@ViewBag.Title" />
  <meta property="og:type" content="article" />
  <meta property="og:image" content="//wildermuth.com/img/headshots/shawn-head-2016-square-200.jpg" />
  <meta property="og:description" content="@ViewBag.Title" />

