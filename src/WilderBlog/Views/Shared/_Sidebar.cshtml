</div>
@if (((string)ViewContext.RouteData.Values["controller"]) != "Search")
{
  <hr />
  <form id="searchForm" novalidate>
    <div class="input-group">
      <input type="text" class="form-control" id="search" value="@ViewBag.Term" placeholder="Search..." />
      <span class="input-group-btn">
        <button class="btn btn-success" type="button"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>
}
<hr />
<h3>My Courses</h3>
<a href="http://www.pluralsight.com/author/shawn-wildermuth" target="_blank"><img src="~/img/ps_logo.png" class="img-fluid" alt="pluralsight" /></a>
<table class="table table-condensed table-striped table-sm">
  @foreach (var c in courses.Get().Take(10))
  {
    <tr><td><small><a href="http://pluralsight.com/courses/@c.Id" target="_blank">@c.Name @c.Hint</a></small></td></tr>
  }
</table>
