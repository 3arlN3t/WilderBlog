  <script src="~/lib/angular2/Rx.js"></script>
  <script src="~/lib/angular2/angular2.dev.js"></script>
  <script>
    System.config({
      packages: {
        js: {
          defaultExtension: 'js'
        }
      }
    });
    System.import('./js/app')
          .then(null, console.error.bind(console));
  </script>
}
