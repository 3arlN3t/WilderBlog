@model BlogStory
@inject WilderBlog.Services.AdService ads
@{
  ViewBag.Title = $"{Model.Title} - Shawn Wildermuth";
  ViewBag.PageName = Model.Title;
  var pubDate = Model.DatePublished.ToString("MMM dd, yyyy on H:mmtt zzz UTC");
  ViewBag.PageAttribution = $"Posted by Shawn Wildermuth on {pubDate}";
  ViewBag.PageImage = "/img/blog/shawnteaching.png";
}
@Html.Raw(Model.Body)
<div>
  <div style="float: left;">
    <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/3.0/">
      <img alt="Creative Commons License" style="border-width: 0" src="http://i.creativecommons.org/l/by-nc-nd/3.0/88x31.png" />
    </a>
  </div>
  <div>
    This work by <a xmlns:cc="http://creativecommons.org/ns#" href="http://wildermuth.com"
                    property="cc:attributionName" rel="cc:attributionURL">Shawn Wildermuth</a> is
    licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/3.0/">
      Creative Commons Attribution-NonCommercial-NoDerivs 3.0 Unported License
    </a>.<br />
    Based on a work at <a xmlns:dct="http://purl.org/dc/terms/" href="http://wildermuth.com"
                          rel="dct:source">wildermuth.com</a>.
  </div>
</div>
<hr />
@ads.InlineAdd()
<hr />
<div id="disqus_thread"></div>
@section Scripts {
  <script>
    var disqus_config = function () {
      this.page.url = @Model.GetStoryUrl();
      this.page.identifier = @Model.Slug;
    };

    (function () { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');

      s.src = '//wildermuth.disqus.com/embed.js';

      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
}